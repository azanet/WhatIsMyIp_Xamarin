<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Paginas.Page1">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Black" Padding="10,10,10,10">
                <Label Text="What is my IP?" TextColor="Coral" HorizontalOptions="CenterAndExpand" FontSize="30" Padding="0,20,0,50" />

                <Label Text="{Binding Titulo}" TextColor="GreenYellow" FontSize="Medium" Padding="0,0,0,20"/>
                <Button x:Name="BtnConsultar" Text="Consultar IP" WidthRequest="200" BorderWidth="1" Clicked="BtnConsultar_Clicked" FontSize="Small" />
                
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="LblUnoXaml"  Text="{Binding LblUno}" TextColor="White" FontSize="Small" Padding="0,24,10,0"/>
                    <Label Text="{Binding LblDos}" TextColor="Yellow" FontSize="Medium" Padding="0,20,0,0"/>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>